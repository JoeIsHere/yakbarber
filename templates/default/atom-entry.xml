<entry>
  <id>{{postURL}}</id>
  <title>{{{title}}}</title>
  <link type="application/atom+xml" href="{{postURL}}" />
  <published>{{date}}</published>
  {{#updated}}
  <updated>{{updated}}</updated>
  {{/updated}}
  {{^updated}}
  <updated>{{date}}</updated>
  {{/updated}}
  <author>
    <name>{{author}}</name>
    <uri>{{webRoot}}</uri>
  </author>
  <content type="html" xml:lang="en">
    <![CDATA[
    {{{content}}}
    ]]>
  </content>
</entry>